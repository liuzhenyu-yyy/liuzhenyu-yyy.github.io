layout: util/compress
# https://developer.mozilla.org/en-US/docs/Web/Progressive_web_apps/Add_to_home_screen
---
{%- assign app_name = site.data.owner[site.data.conf.main.default_lng].brand | append: "'s App" -%}
{%- assign description = site.data.owner[site.data.conf.main.default_lng].meta_common_description | replace: site.data.conf.main.brand_replace, site.data.owner[site.data.conf.main.default_lng].brand -%}
{
  "short_name": "{{ app_name }}",
  "name": "{{ app_name }}",
  "description": "{{ description }}",
  "icons": [
  {
    "src": "{{ site.baseurl }}/assets/img/favicons/android-chrome-192x192.png",
    "sizes": "192x192",
    "type": "image/png",
    "purpose": "any maskable"
  },
  {
    "src": "{{ site.baseurl }}/assets/img/favicons/android-chrome-512x512.png",
    "sizes": "512x512",
    "type": "image/png",
    "purpose": "any maskable"
  }
  ],
  "start_url": "{{ site.baseurl }}/",
  {%-comment%}"scope": "/",{%endcomment%}
  "display": "standalone",
  "orientation": "any",
  "theme_color": "#808080",
  "background_color": "#808080"
}
